<h2><%= @project.name %></h2>


<% if @volunteers.any? %>
<h3>Current Volunteers for <%= @project.name %>:</h3>
<ul>
  <% @volunteers.each do |volunteer| %>
  <li><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"> <%= volunteer.name %> </a></li>
  <% end %>
  <% else %>
  <h5>Currently there are no volunteers for this project</h5>
  <%end%>
</ul>


<h4>Volunteer Here:</h4>
<form action="/projects/<%= @project.id %>/volunteers/" method="post">
  <label for="name">Name</label>
  <input type="text" name="name">
  <button type="submit" name="button">Volunteer</button>

</form>

<br>
<a href="/projects/<%= @project.id %>/edit">Edit Project</a>
